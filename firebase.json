{
  "hosting": {
    "public": "packages/web/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "cd packages/web && pnpm run build"
    ]
  },
  "functions": [
    {
      "source": "packages/api/dist",
      "predeploy": [
        "cd packages/api && pnpm run build:firebase"
      ]
    }
  ],
  "emulators": {
    "singleProjectMode": true,
    "hosting": {
      "port": 5000
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    }
  }
}
